// ═══════════════════════════════════════════════════════════════
// PURCHASE ORDER ITEM MODEL
// ═══════════════════════════════════════════════════════════════
// SystemId: POITEM0000000001 (English, 10 digits)
// BusinessId: CTPN0000000001 (Vietnamese - Chi tiết phiếu nhập, 10 digits)
// ═══════════════════════════════════════════════════════════════

model PurchaseOrderItem {
  systemId          String        @id           // POITEM0000000001
  id                String        @unique       // CTPN0000000001
  
  // Parent Purchase Order
  purchaseOrderId   String
  purchaseOrder     PurchaseOrder @relation(fields: [purchaseOrderId], references: [systemId])
  
  // Product
  productId         String
  product           Product       @relation(fields: [productId], references: [systemId])
  productName       String
  productSku        String?
  
  // Quantity
  quantity          Int           @default(1)
  receivedQuantity  Int           @default(0)
  unitPrice         Decimal       @db.Decimal(15, 2)
  
  // Discount
  discount          Decimal       @default(0) @db.Decimal(15, 2)
  
  // Total
  lineTotal         Decimal       @db.Decimal(15, 2)
  
  // Notes
  notes             String?
  
  // Audit
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  @@map("purchase_order_items")
}
