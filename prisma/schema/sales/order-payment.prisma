model OrderPayment {
  systemId    String   @id @default(uuid())
  id          String   @unique
  orderId     String
  date        DateTime @default(now())
  method      String
  amount      Decimal  @db.Decimal(15, 2)
  description String?
  createdBy   String
  createdAt   DateTime @default(now())
  
  // Link to warranty (for warranty deduction payments)
  linkedWarrantySystemId String?
  
  order       Order    @relation(fields: [orderId], references: [systemId], onDelete: Cascade)

  @@index([orderId])
  @@map("order_payments")
}
