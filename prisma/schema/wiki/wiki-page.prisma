model WikiPage {
  systemId   String   @id
  id         String   @unique
  title      String
  content    String?  @db.Text // Markdown content
  category   String?
  tags       String[]
  author     String?  // Employee Name
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  createdBy  String?
  updatedBy  String?
  isDeleted  Boolean  @default(false)
  deletedAt  DateTime?

  @@index([category])
  @@map("wiki_pages")
}
