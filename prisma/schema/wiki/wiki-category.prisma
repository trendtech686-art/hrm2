// ═══════════════════════════════════════════════════════════════
// WIKI CATEGORY MODEL
// ═══════════════════════════════════════════════════════════════
// SystemId: WCAT000001 (English, 6 digits)
// BusinessId: DMTL000001 (Vietnamese - Danh mục tài liệu, 6 digits)
// ═══════════════════════════════════════════════════════════════

model WikiCategory {
  systemId          String        @id           // WCAT000001
  id                String        @unique       // DMTL000001
  
  // Basic info
  name              String
  slug              String        @unique
  description       String?
  
  // Hierarchy
  parentId          String?
  parent            WikiCategory? @relation("WikiCategoryHierarchy", fields: [parentId], references: [systemId])
  children          WikiCategory[] @relation("WikiCategoryHierarchy")
  
  // Display
  sortOrder         Int           @default(0)
  icon              String?
  color             String?
  
  // Status
  isActive          Boolean       @default(true)
  
  // Relations
  pages             WikiPage[]
  
  // Soft delete
  isDeleted         Boolean       @default(false)
  deletedAt         DateTime?
  
  // Audit
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  createdBy         String?
  updatedBy         String?
  
  @@map("wiki_categories")
}
