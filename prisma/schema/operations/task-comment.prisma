// TASK COMMENT MODEL
// ═══════════════════════════════════════════════════════════════

model TaskComment {
  systemId          String        @id @default(uuid())
  
  // Parent Task
  taskId            String
  task              Task          @relation(fields: [taskId], references: [systemId])
  
  // Comment content
  content           String
  
  // Attachments
  attachments       String[]
  
  // Audit
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  createdBy         String?
  updatedBy         String?
  
  @@map("task_comments")
}
