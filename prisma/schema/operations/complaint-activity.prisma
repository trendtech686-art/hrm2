// COMPLAINT ACTIVITY MODEL
// ═══════════════════════════════════════════════════════════════
// Tracks activities on complaints
// ═══════════════════════════════════════════════════════════════

model ComplaintActivity {
  systemId          String        @id @default(uuid())
  
  // Parent Complaint
  complaintId       String
  complaint         Complaint     @relation(fields: [complaintId], references: [systemId])
  
  // Activity details
  activityDate      DateTime      @default(now())
  activityType      String        // comment, status_change, assignment, resolution
  
  // Content
  description       String?
  
  // Status change
  fromStatus        String?
  toStatus          String?
  
  // Attachments
  attachments       String[]
  
  // Audit
  createdAt         DateTime      @default(now())
  createdBy         String?
  
  @@map("complaint_activities")
}
