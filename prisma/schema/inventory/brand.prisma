// ═══════════════════════════════════════════════════════════════
// BRAND MODEL
// ═══════════════════════════════════════════════════════════════
// SystemId: BRAND000001 (English, 6 digits)
// BusinessId: TH000001 (Vietnamese - Thương hiệu, 6 digits)
// ═══════════════════════════════════════════════════════════════

model Brand {
  systemId          String        @id           // BRAND000001
  id                String        @unique       // TH000001
  
  // Basic info
  name              String        @unique
  description       String?
  
  // Contact
  website           String?
  email             String?
  phone             String?
  
  // Display
  logoUrl           String?
  bannerUrl         String?
  sortOrder         Int           @default(0)
  
  // SEO
  slug              String?       @unique
  metaTitle         String?
  metaDescription   String?
  
  // Status
  isActive          Boolean       @default(true)
  isFeatured        Boolean       @default(false)
  
  // Relations
  products          Product[]
  
  // Soft delete
  isDeleted         Boolean       @default(false)
  deletedAt         DateTime?
  
  // Audit
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  createdBy         String?
  updatedBy         String?
  
  @@map("brands")
}
