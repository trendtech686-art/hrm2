model InventoryReceipt {
  systemId      String                 @id
  id            String                 @unique
  type          InventoryReceiptType
  branchId      String
  employeeId    String?
  referenceType String?
  referenceId   String?
  receiptDate   DateTime               @default(now())
  status        InventoryReceiptStatus @default(DRAFT)
  notes         String?
  createdAt     DateTime               @default(now())
  updatedAt     DateTime               @updatedAt
  createdBy     String?
  updatedBy     String?
  
  // === MISSING FIELDS FROM types.ts (Phase 7) ===
  
  // Purchase order linking
  purchaseOrderId          String?    // Business ID for display
  purchaseOrderSystemId    String?    // SystemId for FK
  
  // Supplier info (denormalized)
  supplierSystemId         String?
  supplierName             String?
  
  // Receiver info
  receiverSystemId         String?
  receiverName             String?
  receivedDate             DateTime?
  
  // Branch info (denormalized)
  branchSystemId           String?
  branchName               String?
  warehouseName            String?
  
  // Items (stored as JSON)
  receiptItems             Json?      // Array of InventoryReceiptLineItem
  
  // === RELATIONS ===
  items         InventoryReceiptItem[]

  @@map("inventory_receipts")
}
