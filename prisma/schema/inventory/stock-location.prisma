model StockLocation {
  systemId         String      @id
  id               String      @unique
  name             String
  branchId         String
  branchSystemId   String?     // âœ… Branch systemId
  description      String?
  isDefault        Boolean     @default(false)
  isActive         Boolean     @default(true)
  address          String?
  code             String?     @default("DEFAULT") @db.VarChar(50)
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  createdBy        String?
  updatedBy        String?
  inventoryRecords Inventory[]

  @@map("stock_locations")
}
