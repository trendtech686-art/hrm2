model InventoryReceiptItem {
  systemId         String           @id @default(uuid())
  receiptId        String
  productId        String
  productName      String
  productSku       String
  quantity         Int
  unitCost         Decimal          @default(0) @db.Decimal(15, 2)
  totalCost        Decimal          @default(0) @db.Decimal(15, 2)
  inventoryReceipt InventoryReceipt @relation(fields: [receiptId], references: [systemId], onDelete: Cascade)

  @@map("inventory_receipt_items")
}
