// ═══════════════════════════════════════════════════════════════
// PROVINCE MODEL (Tỉnh/Thành phố)
// ═══════════════════════════════════════════════════════════════

model Province {
  systemId          String        @id @default(uuid())
  
  // Basic info
  name              String
  code              String        @unique
  
  // Type
  type              String?       // province, city
  
  // Display
  sortOrder         Int           @default(0)
  
  // Status
  isActive          Boolean       @default(true)
  
  // Relations
  districts         District[]
  
  // Audit
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  @@map("provinces")
}
