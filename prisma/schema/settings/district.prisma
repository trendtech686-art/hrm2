// DISTRICT MODEL (Quận/Huyện)
// ═══════════════════════════════════════════════════════════════

model District {
  systemId          String        @id @default(uuid())
  
  // Basic info
  name              String
  code              String        @unique
  
  // Province
  provinceId        String
  province          Province      @relation(fields: [provinceId], references: [systemId])
  
  // Type
  type              String?       // district, city, town
  
  // Display
  sortOrder         Int           @default(0)
  
  // Status
  isActive          Boolean       @default(true)
  
  // Relations
  wards             Ward[]
  
  // Audit
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  @@map("districts")
}
