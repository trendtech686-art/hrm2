model PricingPolicy {
  systemId    String         @id
  id          String         @unique
  name        String
  description String?
  type        String?        // 'Nhập hàng' | 'Bán hàng'
  isDefault   Boolean        @default(false)
  isActive    Boolean        @default(true)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  createdBy   String?
  updatedBy   String?
  prices      ProductPrice[]

  @@map("pricing_policies")
}
