// CUSTOM FIELD DEFINITION MODEL
// ═══════════════════════════════════════════════════════════════
// Defines custom fields for entities
// ═══════════════════════════════════════════════════════════════

model CustomFieldDefinition {
  systemId          String        @id @default(uuid())
  
  // Entity
  entityType        String        // product, customer, employee, order
  
  // Field info
  fieldName         String
  fieldLabel        String
  fieldType         String        // text, number, date, select, multiselect, boolean, file
  
  // Options (for select types)
  options           Json?         // [{value: "a", label: "A"}]
  
  // Validation
  isRequired        Boolean       @default(false)
  minLength         Int?
  maxLength         Int?
  minValue          Decimal?      @db.Decimal(15, 2)
  maxValue          Decimal?      @db.Decimal(15, 2)
  pattern           String?       // regex pattern
  
  // Display
  placeholder       String?
  helpText          String?
  sortOrder         Int           @default(0)
  showInList        Boolean       @default(false)
  showInForm        Boolean       @default(true)
  
  // Status
  isActive          Boolean       @default(true)
  
  // Audit
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  createdBy         String?
  updatedBy         String?
  
  @@unique([entityType, fieldName])
  @@map("custom_field_definitions")
}
